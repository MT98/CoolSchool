{% block customerUserFormStep %}
   
                                            {% if form.customerUser.email is defined %}
                                                <div class="form-group">
                                                        <label for="form_customerUser_email" class="label">Email</label>
                                                        {{ form_widget(form.customerUser.email, {'attr': {'class': 'form-control', 'id': 'form_customerUser_email', 'placeholder': 'Entrer l\'email de l\'administrateur'}}) }}
                                                </div>
                                            {% endif %} 

                                            {% if form.customerUser.firstName is defined %}
                                                <div class="form-group">
                                                        <label for="form_customerUser_firstName" class="label">Prénom</label>
                                                        {{ form_widget(form.customerUser.firstName, {'attr': {'class': 'form-control', 'id': 'form_customerUser_firstName', 'placeholder': 'Entrer le prénom de l\'administrateur'}}) }}
                                                </div>
                                            {% endif %}

                                            {% if form.customerUser.lastName is defined %}
                                                <div class="form-group">
                                                        <label for="form_customerUser_lastName" class="label">Nom</label>
                                                        {{ form_widget(form.customerUser.lastName, {'attr': {'class': 'form-control', 'id': 'form_customerUser_lastName', 'placeholder': 'Entrer le nom de l\'administrateur'}}) }}
                                                </div>
                                            {% endif %}

                                            {% if form.customerUser.telephone is defined %}
                                                <div class="form-group">
                                                        <label for="form_customerUser_telephone" class="label">Téléphone</label>
                                                        {{ form_widget(form.customerUser.telephone, {'attr': {'class': 'form-control', 'id': 'form_customerUser_telephone', 'placeholder': '+(indicateur pays)(numéro)'}}) }}
                                                </div>
                                            {% endif %}

{% endblock %}