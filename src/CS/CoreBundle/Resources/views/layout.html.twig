<body class="app header-fixed sidebar-fixed aside-menu-fixed aside-menu-hidden">
    <header class="app-header navbar">
        <button class="navbar-toggler mobile-sidebar-toggler hidden-lg-up" type="button">☰</button>
        <a class="navbar-brand" href="#"></a>
        <ul class="nav navbar-nav hidden-md-down b-r-1">
            <li class="nav-item">
                <a class="nav-link navbar-toggler sidebar-toggler" href="#">☰</a>
            </li>

        </ul>
        
        {% block inner_navbar %}

        {% endblock %}



        <ul class="nav navbar-nav ml-auto">
            
            <li class="nav-item dropdown hidden-md-down pr-2">
                <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                    <img src="{{ asset('img/flags/France.png') }}" class="img-flag" alt="Français" height="24">
                </a>
                <div class="dropdown-menu dropdown-menu-right">
                    <div class="dropdown-header text-center">
                        <strong>Choisis ta langue</strong>
                    </div>
                    <a class="dropdown-item" href="#">
                        <img src="{{ asset('img/flags/France.png') }}" class="img-flag" alt="Français" height="24">Français</a>
                    <a class="dropdown-item" href="#">
                        <img src="{{ asset('img/flags/United-Kingdom.png') }}" class="img-flag" alt="English" height="24">English</a>
                    <a class="dropdown-item" href="#">
                        <img src="{{ asset('img/flags/Spain.png') }}" class="img-flag" alt="Español" height="24">Español</a>
                </div>
            </li>

            {% block inner_navbar_nav_after_language %}
                
            {% endblock %}
        </ul>
    </header>

    <div class="app-body">
        <div class="sidebar">
            <nav class="sidebar-nav">
                <ul class="nav">

                    {% block sidebar_nav %}

                    {% endblock %}
                </ul>
            </nav>
        </div>

        <!-- Main content -->
        <main class="main">

            {% block body_main %}
                    
            {% endblock %}

        </main>

        <aside class="aside-menu">
            {% block body_aside_menu %}
        
            {% endblock %}
        </aside>

    </div>

    <footer class="app-footer">
        <a href="#">CoolSchool</a> © 2018
        <span class="float-right">
            Powered by <a href="#">CoolSchool & All Might labs</a>
        </span>
    </footer>

    {% block js %}


    <!-- GenesisUI main scripts -->

    <script src="{{ asset('js/app.js') }}"></script>




    <!-- Custom scripts required by this view -->
    <script src="{{ asset('js/views/main.js') }}"></script>

    {% endblock %}

</body>

</html>